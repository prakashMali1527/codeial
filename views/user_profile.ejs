<link rel="stylesheet" href="/CSS/user_profile.css">

<img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" width="100px">

<% if(profile_user.id == locals.user.id){ %>
    <form action="/users/update/<%= profile_user._id%>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" value="<%= profile_user.name %>">
        <input type="email" name="email" value="<%= profile_user.email %>">
        <input type="file" name="avatar" placeholder="Profile picture">
        <input type="submit" value="Update">
    </form>
<% } else{ %>
    <h2><%= profile_user.name %></h2>
    <h2><%= profile_user.email %></h2>
<% } %>
    


