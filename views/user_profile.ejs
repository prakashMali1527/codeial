<link rel="stylesheet" href="/CSS/user_profile.css">

<div id="background-image-container"></div>

<div id="about">
    <img id="profile-picture" src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" width="100px">

    <div id="user-detail">
        <h2><%= profile_user.name %></h2>
        <h2><%= profile_user.email %></h2>
    </div>

    <div id="update-button">Update <i class="fa-regular fa-pen-to-square"></i></div>
</div>


<% if(profile_user.id == locals.user.id){ %>
    <form id="update-form" action="/users/update/<%= profile_user._id%>" enctype="multipart/form-data" method="POST">
        <input type="text" name="name" value="<%= profile_user.name %>">
        <input type="email" name="email" value="<%= profile_user.email %>">
        <input type="file" name="avatar" placeholder="Profile picture">
        <input type="submit" value="Update">
    </form>
<% } %>
   

    
<script src="/JS/user_profile.js"></script>


